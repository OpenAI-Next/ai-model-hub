{
  "compilerOptions": {
    "outDir": "./dist",      // 输出到 dist 目录
    "rootDir": "./src",      // 指定 src 为项目根目录
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
